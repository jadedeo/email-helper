{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Email Helper",
    "description": "A decentralized email template manager created for an MHCI capstone project at Carnegie Mellon University.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "assets/icon-16.png",
            "48": "assets/icon-48.png",
            "128": "assets/icon-128.png"
        }
    },
    "permissions": ["windows", "scripting", "system.display", "storage"],
    "host_permissions": ["<all_urls>"],
    "icons": {
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    }
}
